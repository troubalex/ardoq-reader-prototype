<section class="workspace">
<% data.data.workspaces.each do |workspace| %>

<header>
<h1 class="title"><%= workspace.name %></h1>
</header>

<div class="sidebar">
<ul>
<% workspace.components.each do |comp| %>

<li>
<% if comp.parent.present? %>
<%= link_to comp.name %>
<% else %>
<em class="uppercase"><%= link_to comp.name %></em>
<% end %>
</li>

<% end %>
</ul>
</div>

<div class="main">

<% workspace.components.each do |comp| %>

<section>
<% if comp.parent.present? %>
<h3><%= comp.name %></h3>
<% else %>
<h2><%= comp.name %></h2>
<% end %>

<% if comp.description.present? %>
<%= markdown.render comp.description %>
<% end %>
</section>

<% end %>

</div>

<% end %>
</section>
